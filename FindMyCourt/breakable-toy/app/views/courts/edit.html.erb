<div class="user-box">
  <h1>Edit</h1>
  <%= form_for @court do |f| %>
    <div class="field"
      <%= f.label :name %><br />
      <%= f.text_field :name %>
    </div>
    <div class="field"
      <%= f.label :address %><br />
      <%= f.text_field :address %>
    </div>
    <div class="field"
      <%= f.label :city %><br />
      <%= f.text_field :city %>
    </div>
    <div class="field"
      <%= f.label :state %><br />
      <%= f.text_field :state %>
    </div>
    <div class="field"
      <%= f.label :country %><br />
      <%= f.text_field :country %>
    </div>
      <%= f.file_field :court_photo %>
      <%= f.submit "Edit court", :method => :post %>
      
    <%= link_to "Delete", court_path(@court), method: :delete, data: {confirm: 'Are you sure?'} %>
    <%= link_to "Back to all Courts", courts_path %>
  <% end %>
